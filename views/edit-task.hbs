<section class="task-section">
  <section class="task-view-section">
    <h2>Redigera uppgift</h2>
    <p>
      {{task}}:
      {{created}}
    </p>
  </section>

  <section class="task-section-form">
    <form class="form-edit" action="/uppgift/{{id}}/redigera" method="post">
      <input
        class="input-edit"
        type="text"
        name="task"
        placeholder="Uppgift"
        value="{{task}}"
      />
      <input
        class="input-edit"
        type="text"
        name="created"
        placeholder="Datum & tid"
        value="{{created}}"
      />

      <!--  
  <input
    type="boolean"
    name="done"
    placeholder="Gjort eller ej gjort"
    value="{{done}}"
  />  -->

      <input class="input-edit-button" type="submit" value="Redigera" />
    </form>
  </section>
</section>

